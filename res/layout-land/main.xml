<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cartoonanimalsmonkey"
    >
    <Button android:id="@+id/configure_button"
    		android:background="@drawable/ic_menu_configuration"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentBottom="true">
    </Button>
    <Button android:id="@+id/rank_button"
    		android:background="@drawable/ic_menu_rank"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:layout_alignParentBottom="true"
    		android:layout_toLeftOf="@+id/configure_button">
    </Button>
    
</RelativeLayout>
